{
  "name": "shopping-list",
  "version": "0.0.0",
  "description": "A shopping list web app",
  "main": "index.js",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "lint": "npm run lint:ts; npm run lint:es",
    "lint:ts": "tslint --format stylish --project .",
    "lint:es": "eslint *.js",
    "prebuild": "npm run clean",
    "build": "npm run build:static; npm run build:ts",
    "build:static": "NODE_ENV='production' webpack --config webpack.prod.js",
    "build:ts": "tsc",
    "server": "NODE_ENV='production' NODE_PATH=dist node dist/server.js",
    "prestart": "npm run build",
    "start": "npm run server",
    "dev": "ts-node -r tsconfig-paths/register src/server.tsx",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "author": "Mike Cravey <techie@craveytrain.com>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "serialize-javascript": "^1.4.0"
  },
  "devDependencies": {
    "@types/clean-webpack-plugin": "^0.1.0",
    "@types/ejs": "^2.3.33",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/morgan": "^1.7.35",
    "@types/react": "^16.0.25",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/react-router-dom": "^4.2.2",
    "@types/reduce-reducers": "^0.1.3",
    "@types/serialize-javascript": "^1.3.2",
    "@types/webpack": "^3.8.1",
    "@types/webpack-bundle-analyzer": "^2.9.0",
    "@types/webpack-dev-middleware": "^1.9.4",
    "@types/webpack-hot-middleware": "^2.16.2",
    "@types/webpack-manifest-plugin": "^1.3.1",
    "@types/webpack-merge": "^4.1.1",
    "awesome-typescript-loader": "^3.4.0",
    "clean-webpack-plugin": "^0.1.17",
    "deep-freeze": "^0.0.1",
    "eslint": "^4.11.0",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^21.2.3",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.4.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.1",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-manifest-plugin": "^1.3.2",
    "webpack-merge": "^4.1.1"
  }
}
